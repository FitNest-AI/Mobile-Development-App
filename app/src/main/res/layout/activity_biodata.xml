<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".ui.biodata.BiodataActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="First Name"
            android:fontFamily="@font/nunito_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout0"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/yellow"
            app:boxBackgroundColor="@color/agakgrey"
            app:hintEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView23">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bioFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/nunito_regular"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Last Name"
            android:fontFamily="@font/nunito_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout0" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/yellow"
            app:boxBackgroundColor="@color/agakgrey"
            app:hintEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bioLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/nunito_regular"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Height"
            android:fontFamily="@font/nunito_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="65dp"
            android:text="Weight"
            android:fontFamily="@font/nunito_regular"
            app:layout_constraintStart_toEndOf="@id/textView24"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColorHint="@color/yellow"
            app:boxBackgroundColor="@color/agakgrey"
            app:hintEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bioHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:fontFamily="@font/nunito_regular"
                android:inputType="number"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cm"
            android:layout_marginTop="20dp"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/textInputLayout2"
            app:layout_constraintTop_toBottomOf="@id/textView24"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="22dp"
            android:textColorHint="@color/yellow"
            app:boxBackgroundColor="@color/agakgrey"
            app:hintEnabled="true"
            app:layout_constraintStart_toEndOf="@id/cm"
            app:layout_constraintTop_toBottomOf="@id/textView25">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bioWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:fontFamily="@font/nunito_regular"
                android:inputType="number"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kg"
            android:layout_marginTop="20dp"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/textInputLayout3"
            app:layout_constraintTop_toBottomOf="@id/textView25"/>

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout2"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/radioGrp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_gender"
            app:layout_constraintStart_toStartOf="parent"
            >
            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:checked="true"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Male"
                android:fontFamily="@font/nunito_regular"
                />
            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="false"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Female"
                android:fontFamily="@font/nunito_regular"
                />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/radioGrp"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                style="@style/Base.Widget.AppCompat.ImageButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:contentDescription="due date"
                android:onClick="showDatePicker"
                android:src="@drawable/ic_date" />

            <TextView
                android:id="@+id/add_tv_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd/mm/yyyy"
                android:fontFamily="@font/nunito_extrabold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What's your goal ?"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/linear"
            app:layout_constraintStart_toStartOf="parent"/>


        <LinearLayout
            android:id="@+id/linearCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goals">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your Level ?"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/linearCheckbox"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/linearCheckboxLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/level">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
            android:id="@+id/targetMuscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What's your Target Muscle ?"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/linearCheckboxLevel"
            app:layout_constraintStart_toStartOf="parent"/>


        <LinearLayout
            android:id="@+id/linearCheckboxTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/targetMuscle">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_targetMuscle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/dietPref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diet"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/linearCheckboxTarget"
            app:layout_constraintStart_toStartOf="parent"/>


        <LinearLayout
            android:id="@+id/linearRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dietPref">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_diet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="343dp"
            android:layout_height="65dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/nunito_extrabold"
            android:text="next"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/btn_corner"
            app:layout_constraintTop_toBottomOf="@id/linearRadio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>